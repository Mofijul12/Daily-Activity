@model IEnumerable<DailyActivities_Web.Models.DailyActivity>
@{
    ViewData["Title"] = "Activities for " + ViewBag.UserName;
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Get Up Time</th>
            <th>Sleep Time</th>
            <th>Expense</th>
            <th>Bad Work</th>
            <th>Salat</th>
            <th>Quran</th>
            <th>Ramadan</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model)
        {
            <tr>
                <td>@activity.Date.ToString("yyyy-MM-dd")</td>
                <td>@activity.GetUpTime</td>
                <td>@activity.SleepTime</td>
                <td>@activity.Expense</td>
                <td>@(activity.BadWork ? "Yes" : "No")</td>
                <td>@activity.Salat</td>
                <td>@(activity.Quran ? "Yes" : "No")</td>
                <td>@(activity.Ramadan ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>
